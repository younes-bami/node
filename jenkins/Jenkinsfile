podTemplate(containers: [


        containerTemplate(
        name: 'docker', 
        image: 'docker:18.05-dind',
        privileged: true

          
        ),
        containerTemplate(
        name: 'jnlp', 
        image: 'jenkins/inbound-agent:latest'
        ),
    containerTemplate(
        name: 'node', 
        image: 'node:latest', 
        command: 'sleep', 
        args: '30d')
  ],
  volumes: [
  persistentVolumeClaim(
      mountPath: '/home/jenkins/agent', 
      claimName: 'maven-workspace'      ),
  persistentVolumeClaim(
      mountPath: '/root/.npm', 
      claimName: 'node-npm'      )
  ]
  
  ) {
node(POD_LABEL) {
    environment {
            CI = 'true'
                }
    stage ('Git'){
            git url: 'https://github.com/younes-bami/node.git', branch: 'master'
    }
    stage ('Build'){
            container('node'){
			            sh '''
			            npm install
                  '''
                             }

    }
    stage('Test ') {                        
           container('node'){
                        sh '''
                         ./jenkins/scripts/test.sh
                           '''
                             }
    }

    stage('Docker build ') {                        
           container('docker'){
                        sh '''
                         cd /var/lib/jenkins/workspace/${env.JOB_BASE_NAME}/pipeline
                         '''
                         sh '''
                         docker build -t web-app .
                           '''
                             }
    }
    stage ('Deliver '){
           container('node'){
                        sh '''
                         ./jenkins/scripts/deliver.sh
                           '''
                           
                         input message: 'Finished using the web site? (Click "Proceed" to continue)'

                         sh '''
                         ./jenkins/scripts/kill.sh
                           '''
                             }

}

}

}
