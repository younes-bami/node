podTemplate(containers: [



    containerTemplate(
        name: 'jnlp', 
        image: 'jenkins/inbound-agent:latest'
        ),
    containerTemplate(
        name: 'node', 
        image: 'node:latest', 
        command: 'sleep', 
        args: '30d'),
    containerTemplate(
        name: 'buildah', 
        image: 'docker.io/younesic/buildah', 
        command: 'python3', 
        args: 
          - 'm'
          - 'http.server' ),
    containerTemplate(
        name: 'skopeo', 
        image: 'docker.io/younesic/skopeo', 
        command: 'sleep', 
        args: '30d')
  ],
  volumes: [
  persistentVolumeClaim(
      mountPath: '/home/jenkins/agent', 
      claimName: 'agent-workspace'      ),
  persistentVolumeClaim(
      mountPath: '/root/.npm', 
      claimName: 'node-npm'      ),
  persistentVolumeClaim(
      mountPath: '/home/build/.local/share/containers', 
      claimName: 'buildah-volume'      ),
  persistentVolumeClaim(
      mountPath: '/home/skopeo/.local/share/containers', 
      claimName: 'buildah-volume'      )
  ]
  
  ) {
node(POD_LABEL) {
    environment {
            CI = 'true'
                }
    stage ('Git'){
            git url: 'https://github.com/younes-bami/node.git', branch: 'master'
    }
    stage ('Build'){
            container('node'){
			            sh """
                  cd \${PWD}
			            npm install
                  npm run build
                  """
                             }

    }
    stage('Test ') {                        
           container('node'){
                        sh """
                         ./jenkins/scripts/test.sh
                           """
                             }
    }
     
    stage('Artefact ') {    

            container('buildah'){
 
                            if (env.BRANCH_NAME == 'production'){
                            sh """
                            cd \${PWD}
                            buildah build --layers=true  -t web-app:latest .
                            buildah images --all
                            """ 
                              }
                              sh """
                              buildah images --all
                              """
                             }
      
          container('skopeo'){
                       if (env.BRANCH_NAME == 'production'){
                          sh """
                          cd /home/skopeo
                          skopeo inspect containers-storage:localhost/web-app:latest 
                          skopeo copy --dest-creds \${DOCKER_USR}:\${DOCKER_PWD} containers-storage:localhost/web-app:latest docker://docker.io/younesic/web-app 
                          """
                       }
                       sh """
                                                 skopeo inspect containers-storage:localhost/web-app:latest 

                       """

    
    }
 }  
    
}
}
