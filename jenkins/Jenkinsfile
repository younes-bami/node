podTemplate(containers: [



        containerTemplate(
        name: 'jnlp', 
        image: 'jenkins/inbound-agent:latest'
        ),
    containerTemplate(
        name: 'node', 
        image: 'node:latest', 
        command: 'sleep', 
        args: '30d'),
    containerTemplate(
        name: 'buildah', 
        image: 'quay.io/buildah/stable:latest', 
        command: 'sleep', 
        args: '30d')
  ],
  volumes: [
  persistentVolumeClaim(
      mountPath: '/home/jenkins/agent', 
      claimName: 'agent-workspace'      ),
  persistentVolumeClaim(
      mountPath: '/root/.npm', 
      claimName: 'node-npm'      ),
    persistentVolumeClaim(
      mountPath: '/var/lib/containers:z', 
      claimName: 'buildah-volume'      )
  ]
  
  ) {
node(POD_LABEL) {
    environment {
            CI = 'true'
                }
    stage ('Git'){
            git url: 'https://github.com/younes-bami/node.git', branch: 'master'
    }
    stage ('Build'){
            container('node'){
			            sh '''
			            npm install
                  '''
                             }

    }
    stage('Test ') {                        
           container('node'){
                        sh '''
                         ./jenkins/scripts/test.sh
                           '''
                             }
    }

       stage('Buildah ') {                        
           container('buildah'){
                        sh '''
                            buildah     
                           '''
                             }
    }


}
  }