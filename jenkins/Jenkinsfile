podTemplate(containers: [



        containerTemplate(
        name: 'jnlp', 
        image: 'jenkins/inbound-agent:latest'
        ),
    containerTemplate(
        name: 'node', 
        image: 'node:latest', 
        command: 'sleep', 
        args: '30d')
  ],
  volumes: [
  persistentVolumeClaim(
      mountPath: '/home/jenkins/agent', 
      claimName: 'agent-workspace'      ),
  persistentVolumeClaim(
      mountPath: '/root/.npm', 
      claimName: 'node-npm'      )
  ]
  
  ) {
node(POD_LABEL) {
    environment {
            CI = 'true'
                }
    stage ('Git'){
            git url: 'https://github.com/younes-bami/node.git', branch: 'master'
    }
    stage ('Build'){
            container('node'){
			            sh '''
			            npm install
                  '''
                             }

    }
    stage('Test ') {                        
           container('node'){
                        sh '''
                         ./jenkins/scripts/test.sh
                           '''
                             }
    }

      


}
  }
podTemplate(yaml: readTrusted('pod.yaml')) {

  node(POD_LABEL) {
  environment {
      CI = 'true'
                }

 stage('Artefact ') {                        
           container('buildah'){
                            git url: 'https://github.com/younes-bami/node.git', branch: 'master'

                            sh "cd /home/jenkins/agent/workspace/${env.JOB_BASE_NAME}"
                            //sh "buildah build --layers=true  -t web-app:latest ."
      
                            

                             }
      
          container('skopeo'){
                          
                          sh " echo \$DOCKER_USR "
                          sh " skopeo inspect containers-storage:localhost/web-app:latest "
                          sh " skopeo copy --dest-creds \${DOCKER_USR}:\${DOCKER_PWD} containers-storage:localhost/web-app:latest docker://docker.io/younesic/web-app "
                          

    
    }  
    }
}
}
